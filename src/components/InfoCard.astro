---
interface Props {
  title: string;
  description: string;
  image?: string;
  slug: string;
  pubDate: Date;
}

const { title, description, image, slug, pubDate} = Astro.props;
---

<article>

  <a href={`/blog/${slug}`} class="flex-col mt-8 lg:-mx-6 lg:items-center  text-gray-400 ">
    <div class=" lg:flex">
      <img class="object-cover w-full lg:mx-6 lg:w-1/2 rounded-xl h-72 lg:h-96" src={image} />
    
      <div class="flex flex-col justify-between p-4 ">
        <h2 class="text-2xl font-bold dark:text-gray-300 md:text-3xl hover:underline">{title}</h2>
        <p class="mt-3 text-sm  dark:text-gray-300 font-normal hover:underline">{description}</p>
      </div>
    </div>
  <!--{image && <div class="block md:hidden lg:block rounded-md h-64 md:h-32 m-4 md:m-0" style={`background-image: url(${image})`} />}-->
  
  </a>

</article>

<style>
  article {
    position: relative;
    overflow: hidden;
    grid-column: span 2;
    grid-row: span 2;
    
  }

  .image-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-size: cover;
    background-position: center;
    opacity: 0.15;
    transition: opacity 0.3s ease;
    z-index: 0;
  }

  article:hover .image-overlay {
    opacity: 0.25;
  }

  .content {
    position: relative;
    z-index: 1;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  h2 {
    margin: 0;
    font-size: 1.25rem;
    font-weight: 600;
  }

  a {
    color: inherit;
    text-decoration: none;
  }

  a:hover {
    color: var(--accent-color);
  }

  p {
    margin: 0.5rem 0 0;
    line-height: 1.5;
    flex-grow: 1;
    opacity: 0.8;
  }
</style>